<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/colorWhite"
    tools:context=".HardwareActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/select_devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/select_devices"
        android:textSize="@dimen/basic_sp_28" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/select_devices">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/select_devices">

            <Button
                android:id="@+id/devices1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/button_round"
                android:text="D1"
                android:textSize="40dp"
                android:layout_alignParentLeft="true"/>
            <Button
                android:id="@+id/devices2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/button_round"
                android:text="D2"
                android:textSize="40dp"
                android:layout_alignParentRight="true"/>

            <Button
                android:id="@+id/devices3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/button_round"
                android:text="D3"
                android:textSize="40dp"
                android:layout_below="@id/devices1"
                android:layout_alignParentLeft="true"/>
            <Button
                android:id="@+id/devices4"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/button_round"
                android:text="D4"
                android:textSize="40dp"
                android:layout_below="@id/devices2"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>