<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <Button
        android:id="@+id/btnElectro"
        android:layout_width="@dimen/width_button_main"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/border_style"
        android:text="@string/electro_stimulator"
        android:textColor="@color/colorWhite"
        android:onClick="selectDevices"/>

    <TextView
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnElectro"/>

    <Button
        android:id="@+id/btnElectropedia"
        android:layout_width="@dimen/width_button_main"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/border_style"
        android:text="@string/electropedia"
        android:textColor="@color/colorWhite"
        android:layout_below="@id/separator"/>

</RelativeLayout>